vman() {
   vim -c "SuperMan $*"

   if [ "$?" != "0" ]; then
  	 echo "No manual entry for $*"
   fi
}


function colour_my_prompt {
    local BRed='\[\e[1;31m\]'
    local Red='\[\e[0;31m\]'
    local Red='\[\e[0;31m\]'
    local BBlue='\[\e[1;34m\]'
    local BBlue='\[\e[1;34m\]'
    local Green='\[\e[0;32m\]'
    local BGreen='\[\e[1;32m\]'
    local BYellow='\[\e[1;49;93m\]'
    local NC='\[\e[m\]'
    local __host="${Red}\h"
    local __separator="::"
    local __curr_location="${BBlue}\W"
    #local __end_prompt="${BGreen}> "
    local __end_prompt="${BGreen}·êÖ  "
    local __reset_color="${NC}"
    export PS1="$__host$__separator$__curr_location $__end_prompt$__reset_color"
}

colour_my_prompt

